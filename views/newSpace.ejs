<% include partials/header %>
    <div class="container">
        <form>
            <div class="form-group">
                <label>Type Of Space</label>
                <!-- <input type="text" class="form-control" id="typeOfSpace" placeholder="Backyard"> -->
                <select class="form-control" id="typeOfSpace">
                    <option>Driveway</option>
                    <option>Backyard</option>
                    <option>Garage</option>
                    <option>Other</option>
                  </select>
            </div>
            <div class="form-group">
                <label>Zip Code</label>
                <input type="text" class="form-control" id="zipCode" placeholder="33199">
            </div>
            <div class="form-group">
                <label>Price</label>
                <input type="text" class="form-control" id="price" placeholder="$500">
            </div>
            <div class="form-group">
                <label>Size(SQ Feet)</label>
                <input type="number" class="form-control" id="size" placeholder="200">
            </div>
            <div class="form-group">
                <label>Description</label>
                <textarea class="form-control" id="description" placeholder="Great for boats"></textarea>
            </div>
            <div class="features">
            <% features.forEach(function(element){ %>
                <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="feature<%=element.id %>" name=""value="<%= element.id %>">
                        <label class="form-check-label" for="feature<%=element.id %>"><%= element.name %></label>
                </div>
              <% }) %>  
            </div>
            <!-- Need to decide if to make indoor/outdoor a feature or a value of space -->
            <!-- <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="inOrOut" id="inlineRadio1" value="indoor">
                <label class="form-check-label" for="inlineRadio1">Indoor</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="inOrOut" id="inlineRadio2" value="outdoor">
                <label class="form-check-label" for="inlineRadio2">Outdoor</label>
            </div> -->
            <button class="btn btn-outline-primary d-block" id="submitNewSpace" type="submit">Submit</button>


        </form>
    </div>
    <% include partials/footer %>